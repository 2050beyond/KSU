<div class="product-detail" style="display: grid; grid-template-columns: 1fr 1fr; min-height: calc(100vh - 60px);">
  
  <!-- Left Column: Images -->
  <div class="product-images" style="overflow-y: auto; scroll-snap-type: y mandatory; height: calc(100vh - 60px);">
    {% for image in product.images %}
      <div style="scroll-snap-align: start; height: 100vh; display: flex; align-items: center; justify-content: center;">
        <img src="{{ image | img_url: '1200x1600' }}" alt="{{ product.title | escape }}" style="width: 100%; height: 100%; object-fit: contain; display: block;">
      </div>
    {% endfor %}
  </div>

  <!-- Right Column: Details -->
  <div class="product-details" style="padding: 40px; display: flex; flex-direction: column; justify-content: center; border-left: 1px solid black;">
    <h1 style="margin-bottom: 20px; font-size: 24px;">{{ product.title }}</h1>
    
    <div style="margin-bottom: 20px; font-size: 14px;">
      {{ product.price | money }}
    </div>

    <div style="margin-bottom: 40px; font-size: 12px; line-height: 1.6;">
      {{ product.description }}
    </div>

    <form id="add-to-cart-form">
      <select name="id" id="product-select" style="width: 100%; padding: 8px; margin-bottom: 12px; border: 1px solid black; font-family: 'Times New Roman', Times, serif; font-size: 10px; text-transform: lowercase;">
        {% for variant in product.variants %}
          <option value="{{ variant.id }}" {% unless variant.available %}disabled{% endunless %}>
            {{ variant.title }} - {{ variant.price | money }}
          </option>
        {% endfor %}
      </select>
      
      <button type="submit" style="width: 100%; padding: 12px; border: 1px solid black; background: white; font-family: 'Times New Roman', Times, serif; font-size: 10px; text-transform: lowercase; cursor: pointer;">
        add to cart
      </button>
    </form>
  </div>
</div>

<style>
  @media (max-width: 768px) {
    .product-detail {
      grid-template-columns: 1fr !important;
    }
    
    .product-images {
      height: 50vh !important;
      scroll-snap-type: x mandatory !important;
      overflow-x: auto !important;
      overflow-y: hidden !important;
      display: flex !important;
    }
    
    .product-images > div {
      scroll-snap-align: start !important;
      width: 100vw !important;
      height: 50vh !important;
      flex-shrink: 0 !important;
    }
    
    .product-details {
      border-left: none !important;
      border-top: 1px solid black !important;
    }
  }
</style>

