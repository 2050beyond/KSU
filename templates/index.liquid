<div class="product-grid" style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 0; padding: 20px;">
  {% for product in collections.all.products %}
    <a href="{{ product.url }}" class="product-card" style="display: block; border: 1px solid black; margin: -1px 0 0 -1px;">
      <div class="product-image" style="aspect-ratio: 3/4; overflow: hidden;">
        {% if product.featured_image %}
          <img src="{{ product.featured_image | img_url: '600x800' }}" alt="{{ product.title | escape }}" style="width: 100%; height: 100%; object-fit: cover; display: block;">
        {% endif %}
      </div>
      <div class="product-info" style="padding: 12px; border-top: 1px solid black;">
        <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
          <span class="product-title">{{ product.title }}</span>
          <span class="product-price">{{ product.price | money }}</span>
        </div>
        <div style="display: flex; justify-content: space-between;">
          <span class="product-type">{{ product.type }}</span>
          {% if product.compare_at_price > product.price %}
            <span class="sale-badge">sale</span>
          {% endif %}
        </div>
      </div>
    </a>
  {% endfor %}
</div>

<style>
  @media (max-width: 768px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr) !important;
    }
  }
</style>
