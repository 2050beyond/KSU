<header style="display: flex; justify-content: space-between; align-items: center; padding: 20px; position: relative;">
  <div class="logo">
    <a href="/">{{ shop.name }}</a>
  </div>
  <div class="cart-container">
    <a href="/checkout" id="cart-link" class="cart-link">cart (<span id="cart-count">0</span>)</a>
    
    <!-- Cart Overlay (Mobile Only) -->
    <div class="cart-overlay" id="cart-overlay"></div>
    
    <!-- Mini Cart Dropdown -->
    <div class="mini-cart-dropdown" id="mini-cart" id="cart-dropdown">
      <div class="mini-cart-content" id="mini-cart-content">
        <!-- Content will be rendered by JavaScript -->
      </div>
    </div>
  </div>
</header>

<style>
  .cart-container {
    position: relative;
  }

  .cart-link {
    cursor: pointer;
  }

  /* Cart Overlay (Mobile Only) */
  .cart-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 998;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition: opacity 0.2s ease-out, visibility 0.2s ease-out;
  }

  .cart-overlay.is-open {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }

  @media (min-width: 769px) {
    .cart-overlay {
      display: none;
    }
  }

  .mini-cart-dropdown {
    position: absolute;
    top: 100%;
    right: 0;
    margin-top: 0;
    width: 300px;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid #f0f0f0;
    border-radius: 12px;
    padding: 24px;
    padding-top: 20px;
    opacity: 0;
    visibility: hidden;
    z-index: 1000;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: opacity 0.2s ease-out, visibility 0.2s ease-out;
    pointer-events: none;
  }

  .mini-cart-dropdown::before {
    content: '';
    position: absolute;
    top: -20px;
    left: 0;
    right: 0;
    height: 20px;
    background: transparent;
  }

  .mini-cart-dropdown.active {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
    transition: opacity 0.2s ease-out, visibility 0.2s ease-out;
  }

  .mini-cart-dropdown.fade-out {
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease-in 0.2s, visibility 0.3s ease-in 0.2s;
  }

  .mini-cart-dropdown.is-open {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }

  .mini-cart-content {
    font-family: Arial, sans-serif;
    font-size: 12px;
    line-height: 1.25;
    text-transform: lowercase;
  }

  .cart-empty {
    color: #999999;
    text-align: center;
    padding: 20px 0;
  }

  .cart-items {
    margin-bottom: 20px;
  }

  .cart-item {
    display: grid;
    grid-template-columns: 40px 1fr auto;
    gap: 12px;
    align-items: start;
    padding: 12px 0;
    border-bottom: 1px solid #f5f5f5;
  }

  .cart-item:last-child {
    border-bottom: none;
  }

  .cart-item-image {
    width: 40px;
    height: 40px;
    object-fit: cover;
    display: block;
    border-radius: 4px;
  }

  .cart-item-details {
    flex: 1;
    min-width: 0;
  }

  .cart-item-title {
    font-weight: normal;
    margin-bottom: 4px;
    word-wrap: break-word;
  }

  .cart-item-variant {
    color: #999999;
    font-size: 11px;
    margin-bottom: 8px;
  }

  .cart-item-controls {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .cart-item-quantity {
    font-size: 12px;
    min-width: 20px;
    text-align: center;
  }

  .cart-item-qty-btn {
    background: none;
    border: none;
    color: #000000;
    cursor: pointer;
    font-size: 14px;
    padding: 2px 6px;
    line-height: 1;
    font-family: Arial, sans-serif;
  }

  .cart-item-qty-btn:hover {
    opacity: 0.6;
  }

  .cart-item-right {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 8px;
  }

  .cart-item-price {
    white-space: nowrap;
  }

  .cart-item-remove {
    color: #999999;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    font-size: 11px;
    text-decoration: underline;
  }

  .cart-item-remove:hover {
    color: #000000;
  }

  .cart-footer {
    border-top: 1px solid #f0f0f0;
    padding-top: 15px;
    margin-top: 15px;
  }

  .cart-subtotal {
    display: flex;
    justify-content: space-between;
    margin-bottom: 15px;
    font-weight: bold;
  }

  .cart-checkout-btn {
    width: 100%;
    padding: 12px;
    background: #000000;
    color: #FFFFFF;
    border: none;
    border-radius: 999px;
    cursor: pointer;
    font-family: Arial, sans-serif;
    font-size: 12px;
    line-height: 1.25;
    text-transform: lowercase;
    transition: opacity 0.2s;
    text-decoration: none;
    display: block;
    text-align: center;
  }

  .cart-checkout-btn:hover {
    opacity: 0.8;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .mini-cart-dropdown {
      position: fixed;
      top: 20px;
      left: 50%;
      transform: translateX(-50%);
      width: 90%;
      max-width: 400px;
      z-index: 999;
      margin-top: 0;
      right: auto;
      opacity: 0;
      visibility: hidden;
      pointer-events: none;
    }

    .mini-cart-dropdown.is-open {
      opacity: 1;
      visibility: visible;
      pointer-events: auto;
    }
  }
</style>
