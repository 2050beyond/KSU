<footer class="site-footer">
  {% if section.settings.menu != blank %}
    {% assign footer_menu = linklists[section.settings.menu] %}
    
    {% if footer_menu.links.size > 0 %}
      <nav class="footer-nav">
        {% for link in footer_menu.links %}
          <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
        {% endfor %}
      </nav>
    {% endif %}
  {% endif %}
  
  <div class="footer-copyright">
    &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}
  </div>
</footer>

<style>
  .site-footer {
    padding: 60px 20px;
    text-align: center;
    font-family: Arial, sans-serif;
    font-size: 12px;
    line-height: 1.25;
    text-transform: lowercase;
    color: #000000;
    background: #FFFFFF;
  }

  .footer-nav {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 40px;
    margin-bottom: 30px;
    list-style: none;
    padding: 0;
    margin: 0 0 30px 0;
  }

  .footer-link {
    color: #000000;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .footer-link:hover {
    opacity: 0.6;
  }

  .footer-copyright {
    color: #888888;
    font-size: 11px;
    margin-top: 20px;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .site-footer {
      padding: 40px 20px;
    }

    .footer-nav {
      flex-direction: column;
      gap: 20px;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "footer"
    }
  ]
}
{% endschema %}

