<footer class="site-footer">
  {% if section.settings.menu != blank %}
    {% assign footer_menu = linklists[section.settings.menu] %}
    
    {% if footer_menu.links.size > 0 %}
      <nav class="footer-nav">
        {% for link in footer_menu.links %}
          <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
        {% endfor %}
      </nav>
    {% endif %}
  {% endif %}
</footer>

<style>
  .site-footer {
    padding: 20px;
    text-align: center;
    font-family: 'New York', 'Times New Roman', Times, serif;
    font-size: 10px;
    line-height: 1.25;
    text-transform: lowercase;
    color: #999999;
    background: #FFFFFF;
  }

  .footer-nav {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 40px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-link {
    color: #999999;
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-link:hover {
    color: #7E857A;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .site-footer {
      padding: 20px;
    }

    .footer-nav {
      flex-direction: column;
      gap: 20px;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "footer"
    }
  ]
}
{% endschema %}
