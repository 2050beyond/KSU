<div class="main-product">
  <!-- Image Carousel (Top Half) -->
  <div class="product-carousel-wrapper">
    <div class="image-carousel-container" id="product-carousel">
      {% assign image_count = 0 %}
      {% for image in product.images limit: 5 %}
        {% assign image_count = image_count | plus: 1 %}
      {% endfor %}
      {% if image_count > 0 %}
        <div class="carousel-track">
          {% for image in product.images limit: 5 %}
            <img 
              src="{{ image | img_url: '1200x1600' }}" 
              alt="{{ product.title | escape }}"
              {% if forloop.first %}loading="eager" fetchpriority="high"{% else %}loading="lazy"{% endif %}
            >
          {% endfor %}
        </div>
        {% if image_count > 1 %}
          <button class="carousel-arrow-ghost prev" data-direction="prev">
            <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M7.5 9L4.5 6L7.5 3" stroke="#7E857A" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <button class="carousel-arrow-ghost next" data-direction="next">
            <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4.5 3L7.5 6L4.5 9" stroke="#7E857A" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        {% endif %}
      {% endif %}
    </div>
  </div>

  <!-- Product Info (Bottom Half) -->
  <div class="product-info">
    <div class="product-info-content">
      <!-- Title -->
      <h1 class="product-title">{{ product.title }}</h1>

      <!-- Price -->
      <div class="product-price">{{ product.price | money }}</div>

      <!-- Variant Pickers -->
      <form id="add-to-cart-form" class="product-form">
        <div class="variant-options">
          {% unless product.has_only_default_variant %}
            {% for option in product.options_with_values %}
              {% if option.values.size == 1 %}
                {% comment %} Single option - render as text {% endcomment %}
                <div class="variant-single-value">
                  {{ option.values.first | downcase }}
                </div>
              {% else %}
                {% comment %} Multiple options - render as pills {% endcomment %}
                <div class="option-values">
                  {% for value in option.values %}
                    <button
                      type="button"
                      class="variant-value {% if forloop.first %}selected{% endif %}"
                      data-option="{{ option.name }}"
                      data-value="{{ value }}"
                      onclick="selectVariant(this, '{{ option.name }}', '{{ value }}')"
                    >
                      {{ value }}
                    </button>
                  {% endfor %}
                </div>
              {% endif %}
            {% endfor %}
          {% endunless %}
        </div>

        <!-- Hidden input for selected variant -->
        <input type="hidden" name="id" id="product-variant-id" value="{{ product.selected_or_first_available_variant.id }}">

        <!-- Add to Bag Button -->
        <button type="submit" class="add-to-cart-btn {% unless product.selected_or_first_available_variant.available %}is-sold{% endunless %}" {% unless product.selected_or_first_available_variant.available %}disabled{% endunless %}>
          {% if product.selected_or_first_available_variant.available %}
            add to bag
          {% else %}
            sold
          {% endif %}
        </button>
      </form>

      <!-- Read More Toggle -->
      <button type="button" class="toggle-description">read more</button>

      <!-- Description (Hidden by default) -->
      <div class="product-description" id="product-description">
        {{ product.description }}
      </div>
    </div>
  </div>
</div>

<style>
  .main-product {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  /* Image Carousel */
  .product-carousel-wrapper {
    width: 100vw;
    height: 70vh;
    position: relative;
    background: #FFFFFF;
  }

  .product-carousel-wrapper .image-carousel-container {
    width: 100%;
    height: 100%;
  }

  .product-carousel-wrapper .image-carousel-container img {
    object-fit: contain;
  }

  /* Product Info */
  .product-info {
    padding: 20px;
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .product-info-content {
    max-width: 420px;
    width: 100%;
  }

  .product-title {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 12px;
    line-height: 1.25;
    text-transform: lowercase;
    color: #7E857A;
    margin-bottom: 12px;
    font-weight: normal;
  }

  .product-price {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 14px;
    line-height: 1.25;
    text-transform: lowercase;
    color: #7E857A;
    margin-bottom: 12px;
  }

  /* Variant Options - Compact Pills */
  .variant-options {
    margin-bottom: 12px;
  }

  .variant-single-value {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 12px;
    line-height: 1.25;
    text-transform: lowercase;
    color: #888888;
    margin-bottom: 12px;
  }

  .option-values {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 8px;
  }

  .option-values:last-child {
    margin-bottom: 0;
  }

  .variant-value {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 12px;
    line-height: 1.25;
    text-transform: lowercase;
    background: transparent;
    border: 1px solid rgba(126, 133, 122, 0.3);
    border-radius: 999px;
    padding: 8px 16px;
    height: 40px;
    cursor: pointer;
    color: #7E857A;
    opacity: 0.6;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .variant-value:hover {
    opacity: 0.8;
  }

  .variant-value.selected {
    background: transparent;
    color: #7E857A;
    border: 2px solid #7E857A;
    opacity: 1;
    font-weight: 400;
  }

  .variant-value.is-unavailable {
    background: transparent;
    border: 1px solid #CCCCCC;
    color: #CCCCCC;
    opacity: 1;
    cursor: not-allowed;
    pointer-events: none;
  }

  /* Add to Bag Button - Hug Text, Apple Style CTA */
  .add-to-cart-btn {
    width: max-content;
    display: inline-block;
    padding: 0 28px;
    height: 40px;
    background: #7E857A;
    color: #FFFFFF;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 12px;
    line-height: 1.25;
    font-weight: 400;
    text-transform: lowercase;
    border: 1px solid #7E857A;
    border-radius: 999px;
    cursor: pointer;
    margin-bottom: 12px;
    transition: filter 0.2s;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-align: left;
  }

  .add-to-cart-btn:hover {
    filter: brightness(0.9);
  }

  .add-to-cart-btn:disabled:not(.is-sold) {
    background: transparent;
    color: #CCCCCC;
    border-color: #CCCCCC;
    cursor: not-allowed;
    filter: none;
  }

  /* Strong Red Sold Out Button */
  .add-to-cart-btn.is-sold,
  .add-to-cart-btn.is-sold:disabled {
    background-color: #FF0000 !important;
    color: #FFFFFF !important;
    border-color: #FF0000 !important;
    opacity: 1 !important;
    cursor: not-allowed;
    filter: none !important;
  }

  .add-to-cart-btn.is-sold:hover {
    opacity: 1 !important;
  }

  /* Toggle Description Button - Plain Text Link */
  .toggle-description {
    font-family: Arial, Helvetica, sans-serif !important;
    font-size: 12px !important;
    line-height: 1.25 !important;
    text-transform: lowercase !important;
    color: #7E857A !important;
    background: transparent !important;
    border: none !important;
    padding: 0 !important;
    margin: 0 0 12px 0 !important;
    cursor: pointer !important;
    text-decoration: underline !important;
    font-weight: 400 !important;
    border-radius: 0 !important;
    display: inline-block !important;
    transition: opacity 0.2s;
  }

  .toggle-description:hover {
    opacity: 0.6;
    text-decoration: underline !important;
  }

  /* Description (Hidden by default) */
  .product-description {
    display: none;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 12px;
    line-height: 1.4;
    text-transform: lowercase;
    color: #7E857A;
    max-width: 420px;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .product-description.is-visible {
    display: block;
    opacity: 1;
  }

  .product-description p {
    margin-bottom: 0;
  }

  .product-description p + p {
    margin-top: 1em;
  }
</style>

<script>
  // Variant selection logic
  let selectedOptions = {};
  const variants = {{ product.variants | json }};
  const productOptions = {{ product.options | json }};
  
  {% for option in product.options_with_values %}
    {% if option.values.size == 1 %}
      selectedOptions['{{ option.name }}'] = '{{ option.values.first }}';
    {% else %}
      selectedOptions['{{ option.name }}'] = '{{ option.values.first }}';
    {% endif %}
  {% endfor %}
  
  {% if product.has_only_default_variant %}
    // Product has only default variant, no options to select
  {% endif %}

  // Create variant availability map
  const variantAvailabilityMap = {};
  variants.forEach(variant => {
    const key = variant.options.join('|');
    variantAvailabilityMap[key] = variant.available;
  });

  // Check and mark unavailable variant pills
  function checkVariantAvailability() {
    const allVariantButtons = document.querySelectorAll('.variant-value');
    
    allVariantButtons.forEach(button => {
      const optionName = button.dataset.option;
      const value = button.dataset.value;
      
      // Create a test options object with this value
      const testOptions = { ...selectedOptions };
      testOptions[optionName] = value;
      
      // Check if this combination creates an unavailable variant
      const variant = findVariant(testOptions);
      
      if (variant && !variant.available) {
        button.classList.add('is-unavailable');
      } else {
        button.classList.remove('is-unavailable');
      }
    });
  }

  function selectVariant(button, optionName, value) {
    // Don't allow selection of unavailable variants
    if (button.classList.contains('is-unavailable')) {
      return;
    }

    // Update selected state - find all buttons in the same option group
    const optionRow = button.closest('.option-values');
    const allButtons = optionRow.querySelectorAll('.variant-value');
    allButtons.forEach(btn => btn.classList.remove('selected'));
    button.classList.add('selected');

    // Store selection
    selectedOptions[optionName] = value;

    // Find matching variant
    const variant = findVariant(selectedOptions);
    
    if (variant) {
      document.getElementById('product-variant-id').value = variant.id;
      
      // Update button text and state
      const addToCartBtn = document.querySelector('.add-to-cart-btn');
      
      if (variant.available) {
        addToCartBtn.textContent = 'add to bag';
        addToCartBtn.classList.remove('is-sold');
        addToCartBtn.disabled = false;
      } else {
        addToCartBtn.textContent = 'sold';
        addToCartBtn.classList.add('is-sold');
        addToCartBtn.disabled = true;
      }
    }
    
    // Re-check availability for all pills after selection change
    checkVariantAvailability();
  }

  function findVariant(options) {
    for (let variant of variants) {
      let match = true;
      for (let i = 0; i < variant.options.length; i++) {
        const optionName = productOptions[i];
        if (options[optionName] !== variant.options[i]) {
          match = false;
          break;
        }
      }
      if (match) return variant;
    }
    return null;
  }

  function formatMoney(cents) {
    return new Intl.NumberFormat('{{ shop.locale }}', {
      style: 'currency',
      currency: '{{ shop.currency }}'
    }).format(cents / 100);
  }

  // Description toggle and variant availability check
  document.addEventListener('DOMContentLoaded', function() {
    const toggleBtn = document.querySelector('.toggle-description');
    const description = document.getElementById('product-description');
    
    if (toggleBtn && description) {
      toggleBtn.addEventListener('click', function() {
        const isVisible = description.classList.contains('is-visible');
        
        if (isVisible) {
          description.classList.remove('is-visible');
          toggleBtn.textContent = 'read more';
        } else {
          description.classList.add('is-visible');
          toggleBtn.textContent = 'read less';
        }
      });
    }
    
    // Check variant availability on page load
    checkVariantAvailability();
  });

  // Handle form submission
  document.getElementById('add-to-cart-form').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const variantId = document.getElementById('product-variant-id').value;
    const button = this.querySelector('.add-to-cart-btn');
    
    if (!variantId) {
      alert('please select all options');
      return;
    }

    button.disabled = true;
    button.textContent = 'adding...';

    try {
      const response = await fetch('/cart/add.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          id: variantId,
          quantity: 1
        })
      });

      if (!response.ok) {
        throw new Error('failed to add to cart');
      }

      // Update cart count
      if (typeof updateCartCount === 'function') {
        updateCartCount();
      }

      // Only show feedback if not sold out
      if (!button.classList.contains('is-sold')) {
        button.textContent = 'added to bag';
        setTimeout(() => {
          button.textContent = 'add to bag';
          button.disabled = false;
        }, 1500);
      }

    } catch (error) {
      console.error('Error adding to cart:', error);
      alert('failed to add item to bag');
      // Restore button state based on variant availability
      const variantId = document.getElementById('product-variant-id').value;
      const variant = variants.find(v => v.id.toString() === variantId.toString());
      if (variant && variant.available) {
        button.disabled = false;
        button.textContent = 'add to bag';
        button.classList.remove('is-sold');
      } else {
        button.disabled = true;
        button.textContent = 'sold';
        button.classList.add('is-sold');
      }
    }
  });
</script>

