<div class="main-product">
  <!-- Image Carousel (Top Half) -->
  <div class="product-carousel-wrapper">
    <div class="image-carousel-container" id="product-carousel">
      {% assign image_count = 0 %}
      {% for image in product.images limit: 5 %}
        {% assign image_count = image_count | plus: 1 %}
        {% if image_count == 1 %}
          <img 
            src="{{ image | img_url: '1200x1600' }}" 
            alt="{{ product.title | escape }}"
            loading="lazy"
            class="active-img"
          >
        {% else %}
          <img 
            data-src="{{ image | img_url: '1200x1600' }}" 
            alt="{{ product.title | escape }}"
            class="inactive-img"
          >
        {% endif %}
      {% endfor %}
      {% if image_count > 1 %}
        <button class="carousel-arrow-ghost prev" data-direction="prev">
          <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7.5 9L4.5 6L7.5 3" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button class="carousel-arrow-ghost next" data-direction="next">
          <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M4.5 3L7.5 6L4.5 9" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      {% endif %}
    </div>
  </div>

  <!-- Product Info (Bottom Half) -->
  <div class="product-info">
    <div class="product-info-content">
      <!-- Title -->
      <h1 class="product-title">{{ product.title }}</h1>

      <!-- Price -->
      <div class="product-price">{{ product.price | money }}</div>

      <!-- Variant Pickers -->
      <form id="add-to-cart-form" class="product-form">
        <div class="variant-options">
          {% for option in product.options_with_values %}
            <div class="option-values">
              {% for value in option.values %}
                <button
                  type="button"
                  class="variant-value {% if forloop.first %}selected{% endif %}"
                  data-option="{{ option.name }}"
                  data-value="{{ value }}"
                  onclick="selectVariant(this, '{{ option.name }}', '{{ value }}')"
                >
                  {{ value }}
                </button>
              {% endfor %}
            </div>
          {% endfor %}
        </div>

        <!-- Hidden input for selected variant -->
        <input type="hidden" name="id" id="product-variant-id" value="{{ product.selected_or_first_available_variant.id }}">

        <!-- Add to Cart Button -->
        <button type="submit" class="add-to-cart-btn">
          add to cart — {{ product.selected_or_first_available_variant.price | money }}
        </button>
      </form>

      <!-- More Information Toggle -->
      <button type="button" class="toggle-description">more information</button>

      <!-- Description (Hidden by default) -->
      <div class="product-description" id="product-description">
        {{ product.description }}
      </div>
    </div>
  </div>
</div>

<style>
  .main-product {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  /* Image Carousel */
  .product-carousel-wrapper {
    width: 100vw;
    height: 70vh;
    position: relative;
    background: #FFFFFF;
  }

  .product-carousel-wrapper .image-carousel-container {
    width: 100%;
    height: 100%;
  }

  .product-carousel-wrapper .image-carousel-container img {
    object-fit: contain;
  }

  /* Product Info */
  .product-info {
    padding: 20px;
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .product-info-content {
    max-width: 420px;
    width: 100%;
  }

  .product-title {
    font-family: Arial, sans-serif;
    font-size: 12px;
    line-height: 1.25;
    text-transform: lowercase;
    color: #000000;
    margin-bottom: 12px;
    font-weight: normal;
  }

  .product-price {
    font-family: Arial, sans-serif;
    font-size: 14px;
    line-height: 1.25;
    text-transform: lowercase;
    color: #000000;
    margin-bottom: 12px;
  }

  /* Variant Options - Compact Pills */
  .variant-options {
    margin-bottom: 12px;
  }

  .option-values {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 8px;
  }

  .option-values:last-child {
    margin-bottom: 0;
  }

  .variant-value {
    font-family: Arial, sans-serif;
    font-size: 12px;
    line-height: 1.25;
    text-transform: lowercase;
    background: #fefefe;
    border: 1px solid #e5e5e5;
    border-radius: 999px;
    padding: 8px 16px;
    height: 36px;
    cursor: pointer;
    color: #000000;
    transition: all 0.2s;
    display: flex;
    align-items: center;
  }

  .variant-value:hover {
    background: #f5f5f5;
  }

  .variant-value.selected {
    background: #000000;
    color: #FFFFFF;
    border-color: #000000;
  }

  /* Add to Cart Button - Compact */
  .add-to-cart-btn {
    width: auto;
    min-width: 200px;
    padding: 0 24px;
    height: 36px;
    background: #000000;
    color: #FFFFFF;
    font-family: Arial, sans-serif;
    font-size: 12px;
    line-height: 1.25;
    text-transform: lowercase;
    border: none;
    border-radius: 999px;
    cursor: pointer;
    margin-bottom: 12px;
    transition: opacity 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .add-to-cart-btn:hover {
    opacity: 0.8;
  }

  .add-to-cart-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* Toggle Description Button */
  .toggle-description {
    font-family: Arial, sans-serif;
    font-size: 12px;
    line-height: 1.25;
    text-transform: lowercase;
    color: #000000;
    background: transparent;
    border: none;
    padding: 0;
    cursor: pointer;
    text-decoration: underline;
    margin-bottom: 12px;
    display: block;
  }

  .toggle-description:hover {
    opacity: 0.6;
  }

  /* Description (Hidden by default) */
  .product-description {
    display: none;
    font-family: Arial, sans-serif;
    font-size: 12px;
    line-height: 1.4;
    text-transform: lowercase;
    color: #000000;
    max-width: 420px;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .product-description.is-visible {
    display: block;
    opacity: 1;
  }

  .product-description p {
    margin-bottom: 0;
  }

  .product-description p + p {
    margin-top: 1em;
  }
</style>

<script>
  // Variant selection logic
  let selectedOptions = {};
  
  {% for option in product.options_with_values %}
    selectedOptions['{{ option.name }}'] = '{{ option.values.first }}';
  {% endfor %}

  function selectVariant(button, optionName, value) {
    // Update selected state - find all buttons in the same option group
    const optionRow = button.closest('.option-values');
    const allButtons = optionRow.querySelectorAll('.variant-value');
    allButtons.forEach(btn => btn.classList.remove('selected'));
    button.classList.add('selected');

    // Store selection
    selectedOptions[optionName] = value;

    // Find matching variant
    const variant = findVariant(selectedOptions);
    
    if (variant) {
      document.getElementById('product-variant-id').value = variant.id;
      
      // Update price in button
      const price = formatMoney(variant.price);
      const addToCartBtn = document.querySelector('.add-to-cart-btn');
      addToCartBtn.textContent = `add to cart — ${price}`;
      
      // Disable button if variant unavailable
      addToCartBtn.disabled = !variant.available;
    }
  }

  function findVariant(options) {
    const variants = {{ product.variants | json }};
    
    for (let variant of variants) {
      let match = true;
      for (let i = 0; i < variant.options.length; i++) {
        const optionName = {{ product.options | json }}[i];
        if (options[optionName] !== variant.options[i]) {
          match = false;
          break;
        }
      }
      if (match) return variant;
    }
    return null;
  }

  function formatMoney(cents) {
    return new Intl.NumberFormat('{{ shop.locale }}', {
      style: 'currency',
      currency: '{{ shop.currency }}'
    }).format(cents / 100);
  }

  // Description toggle
  document.addEventListener('DOMContentLoaded', function() {
    const toggleBtn = document.querySelector('.toggle-description');
    const description = document.getElementById('product-description');
    
    if (toggleBtn && description) {
      toggleBtn.addEventListener('click', function() {
        const isVisible = description.classList.contains('is-visible');
        
        if (isVisible) {
          description.classList.remove('is-visible');
          toggleBtn.textContent = 'more information';
        } else {
          description.classList.add('is-visible');
          toggleBtn.textContent = 'less information';
        }
      });
    }
  });

  // Handle form submission
  document.getElementById('add-to-cart-form').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const variantId = document.getElementById('product-variant-id').value;
    const button = this.querySelector('.add-to-cart-btn');
    
    if (!variantId) {
      alert('please select all options');
      return;
    }

    button.disabled = true;
    button.textContent = 'adding...';

    try {
      const response = await fetch('/cart/add.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          id: variantId,
          quantity: 1
        })
      });

      if (!response.ok) {
        throw new Error('failed to add to cart');
      }

      // Update cart count
      if (typeof updateCartCount === 'function') {
        updateCartCount();
      }

      button.textContent = 'added to cart';
      setTimeout(() => {
        const currentVariant = findVariant(selectedOptions);
        const price = currentVariant ? formatMoney(currentVariant.price) : '{{ product.selected_or_first_available_variant.price | money }}';
        button.textContent = `add to cart — ${price}`;
        button.disabled = false;
      }, 1500);

    } catch (error) {
      console.error('Error adding to cart:', error);
      alert('failed to add item to cart');
      button.disabled = false;
      button.textContent = `add to cart — ${formatMoney(findVariant(selectedOptions).price)}`;
    }
  });
</script>

