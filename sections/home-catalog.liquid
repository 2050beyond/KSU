<div class="home-catalog">
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      {% if block.settings.collection != blank %}
        {% assign collection = collections[block.settings.collection] %}
        
        {% if collection %}
          <div class="collection-row" {{ block.shopify_attributes }}>
            <h2 class="collection-title">{{ collection.title }}</h2>
            
            <div class="product-carousel">
              {% for product in collection.products limit: 50 %}
                <a href="{{ product.url }}" class="product-card">
                  <div class="product-image">
                    {% if product.featured_image %}
                      <img 
                        src="{{ product.featured_image | img_url: '400x533' }}" 
                        alt="{{ product.title | escape }}"
                        loading="lazy"
                      >
                    {% else %}
                      <div style="width: 100%; height: 100%; background: #f5f5f5; display: flex; align-items: center; justify-content: center; color: #999;">no image</div>
                    {% endif %}
                  </div>
                  <div class="product-title">{{ product.title }}</div>
                  <div class="product-price">{{ product.price | money }}</div>
                </a>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  {% else %}
    {% comment %} Fallback: Show all products if no blocks configured {% endcomment %}
    {% assign fallback_collection = collections.all %}
    {% if fallback_collection.products.size > 0 %}
      <div class="collection-row">
        <h2 class="collection-title">all products</h2>
        
        <div class="product-carousel">
          {% for product in fallback_collection.products limit: 50 %}
            <a href="{{ product.url }}" class="product-card">
              <div class="product-image">
                {% if product.featured_image %}
                  <img 
                    src="{{ product.featured_image | img_url: '400x533' }}" 
                    alt="{{ product.title | escape }}"
                    loading="lazy"
                  >
                {% else %}
                  <div style="width: 100%; height: 100%; background: #f5f5f5; display: flex; align-items: center; justify-content: center; color: #999;">no image</div>
                {% endif %}
              </div>
              <div class="product-title">{{ product.title }}</div>
              <div class="product-price">{{ product.price | money }}</div>
            </a>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  {% endif %}
</div>

<style>
  .home-catalog {
    padding: 20px 0;
  }

  .collection-row {
    margin-bottom: 40px;
  }

  .collection-title {
    font-size: 12px;
    font-weight: normal;
    margin-bottom: 15px;
    text-transform: lowercase;
  }

  .product-carousel {
    display: flex;
    overflow-x: auto;
    gap: 10px;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .product-carousel::-webkit-scrollbar {
    display: none;
  }

  .product-card {
    flex: 0 0 auto;
    width: 200px;
    text-decoration: none;
    color: #000000;
  }

  .product-image {
    aspect-ratio: 3/4;
    overflow: hidden;
    margin-bottom: 10px;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .product-title {
    font-size: 12px;
    line-height: 1.25;
    margin-bottom: 5px;
    text-transform: lowercase;
  }

  .product-price {
    font-size: 12px;
    line-height: 1.25;
    text-transform: lowercase;
  }
</style>

{% schema %}
{
  "name": "Home Catalog",
  "settings": [],
  "blocks": [
    {
      "type": "collection_row",
      "name": "Collection Row",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Catalog",
      "blocks": [
        {
          "type": "collection_row"
        }
      ]
    }
  ]
}
{% endschema %}

